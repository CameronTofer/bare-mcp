{
  "name": "bare-mcp",
  "version": "1.0.0",
  "description": "Minimal, general-purpose MCP (Model Context Protocol) server library",
  "type": "module",
  "license": "MIT",
  "author": "Cameron Tofer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CameronTofer/bare-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/CameronTofer/bare-mcp/issues"
  },
  "homepage": "https://github.com/CameronTofer/bare-mcp#readme",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:node && npm run test:bare",
    "test:node": "brittle test/*.test.js",
    "test:bare": "bare test/run.bare.js",
    "test:coverage": "c8 --include index.js brittle test/*.test.js"
  },
  "engines": {
    "bare": ">=1.0.0"
  },
  "exports": {
    ".": "./index.js",
    "./http": "./lib/http.js",
    "./stdio": "./lib/stdio.js",
    "./http-node": "./lib/http-node.js",
    "./http-bare": "./lib/http-bare.js",
    "./stdio-node": "./lib/stdio-node.js",
    "./stdio-bare": "./lib/stdio-bare.js"
  },
  "files": [
    "index.js",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "tools",
    "resources",
    "bare",
    "pear",
    "holepunch"
  ],
  "dependencies": {
    "which-runtime": "^1.0.0"
  },
  "optionalDependencies": {
    "ws": "^8.0.0",
    "bare-http1": "^4.0.0"
  },
  "devDependencies": {
    "brittle": "^3.0.0",
    "c8": "^10.0.0"
  }
}
